<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProyectoMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProyectoMAUI"
    xmlns:vi="clr-namespace:ProyectoMAUI.View"
    Shell.FlyoutBehavior="Flyout"
    Title="ProyectoMAUI"
    BackgroundColor="#f0f0f0"
    Shell.FlyoutBackdrop="#b6dec7"
    >

    <ShellContent
        Title="Listado de pacientes"
        ContentTemplate="{DataTemplate vi:ListadoPacienteView}"
        Route="Listado Pacientes" />
    <ShellContent
        Title="Registro de pacientes"
        ContentTemplate="{DataTemplate vi:PacienteView}"
        Route="Paciente" />
    <ShellContent
        Title="Detalle de un paciente"
        ContentTemplate="{DataTemplate vi:CalculoPacienteView}"
        Route="Detalle Paciente"/>

</Shell>
