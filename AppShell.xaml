<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProyectoMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProyectoMAUI"
    xmlns:vi="clr-namespace:ProyectoMAUI.View"
    Shell.FlyoutBehavior="Flyout"
    Title="ProyectoMAUI">

    <ShellContent
        Title="Listar"
        ContentTemplate="{DataTemplate vi:ListadoPacienteView}"
        Route="ListadoAlumnos" />
    <ShellContent
        Title="Nuevo alumno"
        ContentTemplate="{DataTemplate vi:PacienteView}"
        Route="Alumno" />

</Shell>
