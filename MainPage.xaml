<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoMAUI.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <Label Text="{Binding Texto}"
                   FontSize="24"
                   HorizontalOptions="Center"/>

            <!-- Botón que ejecuta el comando -->
            <Button Text="Cambiar texto"
                    Command="{Binding CambiarTextoCommand}"
                    HorizontalOptions="Center"
                    WidthRequest="200"/>

            <!-- Label adicional (opcional) -->
            <Label Text="Estado actual:"
                   FontAttributes="Italic"
                   HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
