<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ProyectoMAUI.ViewModel"
             xmlns:enum="clr-namespace:ProyectoMAUI.Model.Enums"
             x:Class="ProyectoMAUI.View.PacienteView"
             x:DataType="vm:PacienteViewModel"
             BackgroundColor="#AFC8AD"
             Title="Registro de pacientes">

    <VerticalStackLayout Padding="0,20,20,0">
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Text="Nombre:" />
        
        <Entry
            Grid.Row="1"
            Grid.Column="0"
            Text="{Binding Nombre}" />

        <Label
            Grid.Row="2"
            Grid.Column="0"
            Text="Apellido:" />

        <Entry
            Grid.Row="3"
            Grid.Column="0"
            Text="{Binding Apellido}" />

        <Label
            Grid.Row="4"
            Grid.Column="0"
            Text="Edad:" />

        <Entry
            Grid.Row="5"
            Grid.Column="0"
            Text="{Binding Edad}" />

        <Label
            Grid.Row="6"
            Grid.Column="0"
            Text="Peso:" />

        <Entry
            Grid.Row="7"
            Grid.Column="0"
            Text="{Binding Peso}" />

        <Label
            Grid.Row="8"
            Grid.Column="0"
            Text="Estatura:" />

        <Entry
            Grid.Row="9"
            Grid.Column="0"
            Text="{Binding Estatura}" />

        <Label
            Grid.Row="10"
            Grid.Column="0"
            Text="Sexo:" />

        <Entry
            Grid.Row="11"
            Grid.Column="0"
            Text="{Binding Sexo}" />

        <Label
            Grid.Row="12"
            Grid.Column="0"
            Text="Nivel de Actividad:" />

        <Picker Title="Selecciona nivel de actividad"
                Grid.Row="13"
                ItemsSource="{Binding OpcionesNivelActividad}"
                SelectedItem="{Binding NivelActividad, Mode=TwoWay}" />

        <Button Text="Guardar Paciente"
                Grid.Row="14"
                Command="{Binding GuardarPacienteCommand}"
                HorizontalOptions="Center"/>

        <CollectionView
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="0,10"
            BackgroundColor="LightCoral"
            ItemsSource="{Binding Errores}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label
                Padding="5"
                LineBreakMode="WordWrap"
                MinimumWidthRequest="190"
                Text="{Binding .}"
                TextColor="White" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <VerticalStackLayout HorizontalOptions="Center">
            <ActivityIndicator
                IsEnabled="{Binding IsBusy}"
                IsRunning="{Binding IsBusy}"
                IsVisible="{Binding IsBusy}" />

            <Frame BackgroundColor="Green" IsVisible="{Binding IsVisible}">
                <Label
                    FontSize="Title"
                    HorizontalTextAlignment="Center"
                    Text="{Binding Resultado}"
                    TextColor="White" />
            </Frame>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>
